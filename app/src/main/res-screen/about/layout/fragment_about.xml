<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/roboart_logo" />

    <TextView
        android:id="@+id/fragment_about_version_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/base_horizontal_offset"
        tools:text="Версия 1.0"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/fragment_about_move_to_developer_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/base_horizontal_offset"
        android:paddingRight="@dimen/base_horizontal_offset"
        android:text="@string/about_developer_app" />
</LinearLayout>