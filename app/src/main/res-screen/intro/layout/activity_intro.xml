<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/intro_description_event"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/more_info_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingLeft="@dimen/base_horizontal_offset"
        android:paddingRight="@dimen/base_horizontal_offset"
        android:text="@string/intro_more_info_about_event_button_text" />
</LinearLayout>