<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Primary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_intro_screen</item>
    </style>

    <style name="Widget.AppCompat.Button.Primary">
        <item name="android:background">@drawable/selector_primary_button</item>
        <item name="android:textAppearance">
            @style/Widget.AppCompat.Button.Primary.TextAppearance
        </item>
    </style>

    <style name="Widget.AppCompat.Button.Primary.TextAppearance" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.AppCompat.Button.Borderless.Primary">
        <item name="android:textAppearance">
            @style/Widget.AppCompat.Button.Primary.Borderless.TextAppearance
        </item>
    </style>

    <style name="Widget.AppCompat.Button.Primary.Borderless.TextAppearance" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
</resources>
